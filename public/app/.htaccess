<IfModule mod_rewrite.c>
  RewriteEngine On

  # Si existe el archivo o directorio, servirlo tal cual
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback: cualquier otra ruta va a index.html
  RewriteRule ^ index.html [L]
</IfModule>


